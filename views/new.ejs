<% include partials/header %>
<div class="row">
	<div id="newHeader">
		<h1>Add new Campground</h1>
	</div>
	<div id="newForm">	
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="campName" placeholder="Enter Campgroud Name">
			</div>
			<div class="form-group">
				<input class="form-control" type="text-area" name="campDescription" placeholder="Enter Description of the Camp">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="campImage" placeholder="Enter Campground Image URL">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-large btn-block">Add new camp ground</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
</div>
<% include partials/footer %>